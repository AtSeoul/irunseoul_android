<resources>

    <!-- category styles -->
    <!-- Exists for inheritance purposes -->
    <style name="RunTheme" parent="RunTheme.Base" />

    <style name="RunTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@color/text_light</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="RunTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--<item name="windowTranslucentStatus">true</item>-->
        <item name="windowNoTitle">true</item>

    </style>


    <style name="RunTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RunTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RunTheme.Title" parent="android:TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>


    <style name="RunTheme.Profile.Title" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RunTheme.Profile.Title2" parent="android:TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RunTheme.STATS.Title" parent="android:TextAppearance">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RunTheme.STATS.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="RunTheme.LandingPage.Title" parent="android:TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="RunTheme.Secondary.Title" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:layout_marginStart">@dimen/text_margin_list_item</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_list_item</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="RunTheme.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:layout_marginStart">@dimen/text_margin_list_item</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_list_item</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="RunTheme.Detail.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="RunTheme.text.date" parent="android:TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="FullscreenTheme" parent="RunTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>



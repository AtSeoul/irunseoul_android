<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_color"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.irunseoul.android.app.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/run_korea_guide"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="@string/run_korea_guide"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text=">"
            android:layout_weight="0.1"
            android:gravity="start"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />
        
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/strava_app"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="@string/strava_app"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text=">"
            android:layout_weight="0.1"
            android:gravity="start"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="@string/version"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="@string/version_num"
            android:layout_weight="0.1"
            android:gravity="start"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/about_run_korea"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/about_korea_text"
            android:gravity="start"
            android:textAppearance="@style/RunTheme.Settings.Title"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>

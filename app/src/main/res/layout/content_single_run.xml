<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.irunseoul.android.app.activities.SingleRunActivity"
    tools:showIn="@layout/activity_single_run">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/text_margin"
        android:text="@string/dummy_date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/dummy_distance"
            android:textAppearance="@style/RunTheme.MyRun.Value"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/km_distance"
            android:textAppearance="@style/RunTheme.MyRun.Label"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/dummy_distance"
                android:textAppearance="@style/RunTheme.MyRun.Value"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/km_distance"
                android:textAppearance="@style/RunTheme.MyRun.Label"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.irunseoul.android.app.activities.SingleRunActivity"
    tools:showIn="@layout/activity_single_run">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/run_date"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/dummy_date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/dummy_distance"
            android:id="@+id/run_distance"
            android:textAppearance="@style/RunTheme.MyRun.Value"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/km_distance"
            android:textAppearance="@style/RunTheme.MyRun.Label"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/dummy_elapsed_time"
                android:id="@+id/run_duration"
                android:textAppearance="@style/RunTheme.MyRun.Value"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/duration"
                android:textAppearance="@style/RunTheme.MyRun.Label"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/dummy_speed"
                    android:id="@+id/run_speed"
                    android:textAppearance="@style/RunTheme.MyRun.Value"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/avg_speed"
                    android:textAppearance="@style/RunTheme.MyRun.Label"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/dummy_number"
                    android:id="@+id/run_achieve"
                    android:textAppearance="@style/RunTheme.MyRun.Value"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/achievements"
                    android:textAppearance="@style/RunTheme.MyRun.Label"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_record_btn"
                android:padding="@dimen/button_padding"
                android:text="@string/add_image_certificate"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="210dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/record_image"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/couple_run"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
